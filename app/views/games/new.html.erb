<h1>New Game</h1>
<div class="flexbox d-flex">
  <% @letters.each do |letter| %>
    <div class="boxes"><%= letter %></div>
  <% end %>
</div>

<form action="score" method="GET" data-turbo="false" class="question">
  <p>What is the longest word you can find?</p>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="letters" value="<%= @letters.join %>" class='d-none'>
  <input type="text" name="start_time" value="<%= @start_time %>" class='d-none'>
  <input type="text" name="word" autocomplete="off">
  <input type="submit" value="Submit!" class="btn btn-primary">
</form>
